<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="annotation">
    <xs:complexType>
      <xs:sequence>
        <xs:element type="xs:string" name="folder"/>
        <xs:element type="xs:string" name="filename"/>
        <xs:element name="source">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="database"/>
              <xs:element type="xs:string" name="annotation"/>
              <xs:element type="xs:string" name="image"/>
              <xs:element type="xs:int" name="flickrid"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="owner">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="flickrid"/>
              <xs:element type="xs:string" name="name"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="size">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:short" name="width"/>
              <xs:element type="xs:short" name="height"/>
              <xs:element type="xs:byte" name="depth"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element type="xs:byte" name="segmented"/>
        <xs:element name="object" maxOccurs="unbounded" minOccurs="0">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="name"/>
              <xs:element type="xs:string" name="pose"/>
              <xs:element type="xs:byte" name="truncated"/>
              <xs:element type="xs:byte" name="difficult"/>
              <xs:element name="bndbox">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element type="xs:short" name="xmin"/>
                    <xs:element type="xs:short" name="ymin"/>
                    <xs:element type="xs:short" name="xmax"/>
                    <xs:element type="xs:short" name="ymax"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
